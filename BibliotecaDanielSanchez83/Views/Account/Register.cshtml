@model BibliotecaDanielSanchez83.ViewModels.UsuarioRegisterViewModel

@{
    ViewData["Title"] = "Registro";
}

<div class="max-w-md mx-auto mt-10 bg-white p-8 rounded-lg shadow-sm ">
    <h2 class="text-2xl font-bold text-center mb-6">@ViewData["Title"]</h2>

    <form asp-action="Register" method="post">
        <div class="mb-4">
            <label for="Nombre" class="block text-sm font-medium text-gray-700">Nombre</label>
            <input asp-for="Nombre" class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Nombre" class="text-sm text-red-500 mt-1 block"></span>
        </div>

        <div class="mb-4">
            <label for="UserName" class="block text-sm font-medium text-gray-700">Nombre de usuario</label>
            <input asp-for="UserName" class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="UserName" class="text-sm text-red-500 mt-1 block"></span>
        </div>

        <div class="mb-6">
            <label for="Password" class="block text-sm font-medium text-gray-700">Contraseña</label>
            <input asp-for="Password" type="password" class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Password" class="text-sm text-red-500 mt-1 block"></span>
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition">Registrar</button>
    </form>

    <p class="mt-4 text-center text-sm text-gray-600">¿Ya tienes cuenta? <a asp-controller="Account" asp-action="Login" class="text-blue-600 hover:underline">Inicia sesión</a></p>
</div>
