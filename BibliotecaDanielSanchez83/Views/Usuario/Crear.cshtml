@model BibliotecaDanielSanchez83.Models.Domain.Usuario
@{
    Layout = "_LayoutDashboard";
}

<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Crear usuario</strong></h1>
            </div>

            <div class="card-body">
                <form asp-action="Crear" method="post">
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" required />
                    </div>

                    <div class="form-group">
                        <label asp-for="UserName" class="control-label">Usuario</label>
                        <input asp-for="UserName" class="form-control" placeholder="Ingresa el usuario" required />
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Contraseña</label>
                        <input asp-for="Password" class="form-control" placeholder="Ingresa la contraseña" required />
                    </div>

                    <div class="form-group">
                        <label for="FkRol" class="control-label">Rol</label>
                        <select asp-for="FkRol" asp-items="ViewBag.Roles" class="form-control">
                            <option value="">-- Selecciona un rol --</option>
                        </select>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-secondary d-block mx-auto">
                            <i class="bi bi-person-fill"></i> Guardar
                        </button>
                    </div>
                </form>

                <a asp-controller="Usuarios" asp-action="Index" class="text-decoration-none">Volver</a>
            </div>
        </div>
    </div>
</div>
