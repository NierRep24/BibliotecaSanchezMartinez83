@model BibliotecaDanielSanchez83.Models.Domain.Rol
@{
    Layout = "_LayoutDashboard";
}

<div class="flex flex-col flex-1 p-6">
    <div class="bg-white shadow-md rounded-lg p-6">
        <h1 class="text-2xl font-bold text-blue-900 mb-6">Crear Rol</h1>

        <form asp-action="Crear" method="post" class="space-y-4">
            <div class="flex flex-col">
                <label asp-for="Nombre" class="text-gray-700 font-semibold">Nombre del Rol</label>
                <input asp-for="Nombre" class="mt-1 p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Ej. Administrador, Usuario, Editor" required />
                <span asp-validation-for="Nombre" class="text-red-500 text-sm"></span>
            </div>

            <div class="mt-6">
                <button type="submit" class="w-full bg-blue-900 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-300">
                    <i class="fas fa-save"></i> Guardar
                </button>
            </div>
        </form>

        <div class="mt-4">
            <a asp-action="Index" class="text-blue-900 hover:text-blue-700">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </div>
</div>
