@{
    Layout = "_Layout";
}


<div class="relative w-full h-screen bg-cover bg-center" style="background-image: url('/images/libreria2.jpeg');">
    <div class="absolute inset-0 bg-black bg-opacity-50 flex flex-col justify-center items-center text-white text-center p-6">
        <h1 class="text-4xl md:text-6xl font-bold">Bienvenido a la Biblioteca</h1>
        <p class="mt-4 text-lg md:text-xl">Regístrate ahora y accede a nuestra colección de libros.</p>

        <div class="mt-6 flex space-x-4">
            <a href="@Url.Action("Register", "Account")"
               class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-6 rounded-lg transition duration-300">
                Registrarse Ahora
            </a>
        </div>
    </div>
</div>
